<div class="mt-4">
    <div>
      <a href="/me/storelasses">Danh sách sản phẩm</a>
      <h3>Sản phẩm đã xóa</h3>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Vận chuyển</th>
                <th scope="col" colspan="2">Thời gian xóa</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each classes}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.trans}}</td>
                <td>{{this.deletedAt}}</td>
                <td>
                    <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Khôi phục</a>
                    <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-classe-modal">Xóa vĩnh viễn</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Thùng rác trống.
                <a href="/me/stored/classes">Danh sách sản phẩm</a>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Confirm delete classe --}}
<div id="delete-classe-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa sản phẩm?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn vẫn muốn xóa sản phẩm này?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-classe" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-classe-form" method="POST"></form>
<form name="restore-classe-form" method="POST"></form>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        var classeId;
        var deleteForm = document.forms['delete-classe-form'];
        var restoreForm = document.forms['delete-classe-form'];
        var btnDeleteClasse = document.getElementById('btn-delete-classe');
        var restoreBtn = $('.btn-restore');

        // When dialog confirm clicked
        $('#delete-classe-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            classeId = button.data('id');
        });
        
        // When delete classe btn clicked
        btnDeleteClasse.onclick = function () {
            deleteForm.action = '/classes/' + classeId + '/force?_method=DELETE';
            deleteForm.submit();
        }

        // Restore btn clicked
        restoreBtn.click(function (e) {
          e.preventDefault();
          
          var classeId = $(this).data('id');
          restoreForm.action = '/classes/' + classeId + '/restore?_method=PATCH';
          restoreForm.submit();
        });
    });
</script>

