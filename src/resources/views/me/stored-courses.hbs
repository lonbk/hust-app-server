<form name="container-form" class="mt-4" method="POST" action="/classes/handle-form-actions">
    <div>
      <h3>Sản phẩm của tôi</h3>
      <a href="/me/trash/classes">Thùng rác ({{deletedCount}})</a>

      <div class="mt-4 d-flex align-items-center">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
          <label class="form-check-label" for="checkbox-all">
            Chọn tất cả
          </label>
        </div>

        <select class="form-control form-control-sm checkbox-select-all-options" name="action" required>
          <option value="">-- Thao tác --</option>
          <option value="delete">Xóa</option>
        </select>

        <button class="btn btn-primary btn-sm check-all-submit-btn" disabled>Thực hiện</button>
      </div>
    </div>

    {{_sort.type}}

    <table class="table">
        <thead>
            <tr>
                <th scope="col" colspan="2">#</th>
                <th scope="col">
                  Tên sản phẩm
                  {{{sortable 'name' _sort}}}
                </th>
                <th scope="col">
                  Vận chuyển
                </th>
                <th scope="col">
                  Thời gian tạo
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each classes}}
            <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="classeIds[]" value="{{this._id}}">
                  </div>
                </td>

                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.trans}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/classes/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-classe-modal">Xóa</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Bạn chưa đăng sản phẩm nào.
                <a href="/classes/create">Đăng sản phẩm</a>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>

{{!-- Confirm delete classe --}}
<div id="delete-classe-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa sản phẩm?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa sản phẩm này?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-classe" type="button" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-classe-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var classeId;
        var deleteForm = document.forms['delete-classe-form'];
        //var containerForm = document.forms['container-form'];
        var containerForm = $('form[name="container-form"]');
        var btnDeleteClasse = document.getElementById('btn-delete-classe');
        var checkboxAll = $('#checkbox-all');
        var classeItemCheckbox = $('input[name="classeIds[]"]');
        var checkAllSubmitBtn = $('.check-all-submit-btn');

        console.log(containerForm)

        // When dialog confirm clicked
        $('#delete-classe-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            classeId = button.data('id');
        });
        
        // When delete classe btn clicked
        btnDeleteClasse.onclick = function () {
            deleteForm.action = '/classes/' + classeId + '?_method=DELETE';
            deleteForm.submit();
        }

        // Checkbox all changed
        checkboxAll.change(function () {
          var isCheckedAll = $(this).prop('checked');
          classeItemCheckbox.prop('checked', isCheckedAll);
          renderCheckAllSubmitBtn();
        });

        // Classe item checkbox changed
        classeItemCheckbox.change(function () {
          var isCheckedAll = classeItemCheckbox.length === $('input[name="classeIds[]"]:checked').length;
          checkboxAll.prop('checked', isCheckedAll);
          renderCheckAllSubmitBtn();
        });

        // Re-render check all submit button
        function renderCheckAllSubmitBtn() {
          var checkedCount = $('input[name="classeIds[]"]:checked').length;
          if (checkedCount) {
            checkAllSubmitBtn.attr('disabled', false);
          } else {
            checkAllSubmitBtn.attr('disabled', true);
          } 
        }
    });
</script>

