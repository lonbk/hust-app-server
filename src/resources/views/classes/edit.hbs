
<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form class="mt-4" method="POST" action="/classes/{{classe._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{classe.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả sản phẩm</label>
            <textarea class="form-control" id="description" name="description">{{classe.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{classe.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Vận chuyển</label>
            <input type="text" class="form-control" value="{{classe.trans}}" id="trans" name="trans">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>